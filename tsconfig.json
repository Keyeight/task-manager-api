{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true, 
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"]
}
